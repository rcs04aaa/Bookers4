<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  　<h3>【Userの検索結果】検索ワード：<%= @word %></h3>
    <tbody>
      <tr>
        <th></th>
        <th>User name</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image ,size:"50x50" %></td>
        <td><%= user.name %></td>
      </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <h3>【bookの検索結果】検索ワード：<%= @word %></h3>
    <tbody>
      <tr>
        <th></th>
        <th>Book</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image ,size:"50x50" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
